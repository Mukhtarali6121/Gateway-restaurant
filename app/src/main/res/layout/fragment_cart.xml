<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment.CartFragment">


        <include
            android:id="@+id/toolbar"
            layout="@layout/common_toolbar" />

        <ScrollView
            android:id="@+id/nsvParent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_7sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/btnPlaceOrder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clAddToCartFill"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTotalItem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cera_pro_bold"
                    android:text="Total Items"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="21dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCartItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTotalItem"
                    tools:itemCount="2"
                    tools:listitem="@layout/layout_cart_item" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/clCoupon"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edittext_border"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="0dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/rvCartItems"
                    app:layout_constraintStart_toStartOf="@+id/rvCartItems"
                    app:layout_constraintTop_toBottomOf="@+id/rvCartItems">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_border">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etCouponCode"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_3ssp"
                            android:background="@color/white"
                            android:cursorVisible="true"
                            android:fontFamily="@font/cera_pro_medium"
                            android:hint="Enter Promo Code"
                            android:imeOptions="actionDone"
                            android:includeFontPadding="true"
                            android:inputType="textCapCharacters|textNoSuggestions"
                            android:paddingStart="6dp"
                            android:paddingEnd="5dp"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_13ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/clApply"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clApply"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="match_parent"
                            android:background="@drawable/two_sided_corner"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cera_pro_bold"
                                android:text="Apply"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvHintInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/cera_pro_bold"
                    android:text="Instructions"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="@+id/rvCartItems"
                    app:layout_constraintStart_toStartOf="@+id/rvCartItems"
                    app:layout_constraintTop_toBottomOf="@+id/rvCartItems"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edittext_border"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    app:layout_constraintEnd_toEndOf="@+id/rvCartItems"
                    app:layout_constraintStart_toStartOf="@+id/rvCartItems"
                    app:layout_constraintTop_toBottomOf="@+id/tvHintInstructions">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etInstruction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:background="@color/white"
                        android:ellipsize="end"
                        android:padding="@dimen/_6sdp"
                        android:fontFamily="@font/cera_pro_medium"
                        android:hint="Have any instruction for the chef? Write them here"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvHintDeliveryType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/cera_pro_bold"
                    android:text="Delivery Type"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clInstruction"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clDeliveryType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/edittext_couponcode"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvHintDeliveryType">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <RadioGroup
                            android:id="@+id/parcelOption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_border"
                            android:orientation="horizontal"
                            android:padding="@dimen/_6sdp"
                            app:layout_constraintEnd_toStartOf="@+id/clHomeDelivery"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rbTakeaway"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/cera_pro_medium"
                                android:padding="@dimen/_9sdp"
                                android:text="Take Away" />

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rbHomedelivery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/cera_pro_medium"
                                android:padding="@dimen/_9sdp"
                                android:text="Home Delivery" />

                        </RadioGroup>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSelectAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_selectedaddress"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clDeliveryType">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSelectAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/cera_pro_medium"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_16sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="SELECT ADDRESS"
                        tools:visibility="gone"
                        android:visibility="gone"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:drawableEndCompat="@drawable/right_arrow"
                        app:drawableRightCompat="@drawable/right_arrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clSelectedAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivLocation"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/map_location"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvLabel"
                            app:layout_constraintBottom_toBottomOf="@+id/tvFullAddress"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/cera_pro_medium"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="Other"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            app:layout_constraintStart_toEndOf="@+id/ivLocation"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFullAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Address"
                            android:fontFamily="@font/cera_pro_light"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            app:layout_constraintEnd_toStartOf="@+id/ivSelectAddress"
                            app:layout_constraintStart_toStartOf="@+id/tvLabel"
                            app:layout_constraintTop_toBottomOf="@+id/tvLabel" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivSelectAddress"
                            android:layout_width="@dimen/_19sdp"
                            android:layout_height="@dimen/_19sdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/right_arrow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:outlineAmbientShadowColor="@color/colorPrimary"
                    android:outlineSpotShadowColor="@color/colorPrimary"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/clDeliveryType"
                    app:layout_constraintStart_toStartOf="@+id/clDeliveryType"
                    app:layout_constraintTop_toBottomOf="@+id/clSelectAddress">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clBill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHintRestroBill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:fontFamily="@font/cera_pro_bold"
                            android:text="Restaurant Bill"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_14ssp"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHintItemTotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:fontFamily="@font/cera_pro_medium"
                            android:text="Item Total"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvHintRestroBill" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvItemTotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:fontFamily="@font/cera_pro_medium"
                            android:gravity="end"
                            android:text="\u20B9 0.00/-"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintBottom_toBottomOf="@+id/tvHintItemTotal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvHintItemTotal" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHintGST"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:fontFamily="@font/cera_pro_medium"
                            android:text="GST (5.00%)"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvHintItemTotal" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvGST"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:fontFamily="@font/cera_pro_medium"
                            android:gravity="end"
                            android:text="\u20B9 0.00 /-"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintBottom_toBottomOf="@+id/tvHintGST"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvHintGST" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHintDeliveryCharge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:fontFamily="@font/cera_pro_medium"
                            android:text="Delivery Charges"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvHintGST" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDeliveryCharge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:fontFamily="@font/cera_pro_medium"
                            android:gravity="end"
                            android:text="\u20B9 0.00/-"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/tvHintDeliveryCharge"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvHintDeliveryCharge" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHintCouponAmt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:fontFamily="@font/cera_pro_medium"
                            android:text="Coupon amount"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvHintDeliveryCharge" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCouponAmt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:fontFamily="@font/cera_pro_medium"
                            android:gravity="end"
                            android:text="\u20B9 0.00/-"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11ssp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/tvHintCouponAmt"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvHintCouponAmt" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivdottedLine"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layerType="software"
                            android:src="@drawable/dotted_line"
                            app:layout_constraintTop_toBottomOf="@+id/tvHintCouponAmt" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clToPay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/clBill"
                            app:layout_constraintTop_toBottomOf="@+id/ivdottedLine">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvhintToPay"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/cera_pro_bold"
                                android:text="To pay"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_11ssp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvToPay"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:fontFamily="@font/cera_pro_bold"
                                android:gravity="end"
                                android:text="\u20B9 0.00/-"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/tvhintToPay"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tvhintToPay" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/rounded_button_accent"
            android:clickable="true"
            android:visibility="gone"
            tools:visibility="gone"
            android:focusable="true"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
            android:fontFamily="@font/cera_pro_bold"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:text="Place Order"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clEmptyCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivEmptyCart"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp"
                android:src="@drawable/ic_empty_cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cartTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/cera_pro_bold"
                android:text="Your cart is empty"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivEmptyCart" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cartDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/cera_pro_light"
                android:gravity="center"
                android:text="You haven't added item in your cart. we're sure you'll..."
                android:textAlignment="center"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cartTitle" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/rounded_button_accent"
                android:clickable="true"
                android:focusable="true"
                app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
                android:fontFamily="@font/cera_pro_bold"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:text="Add Item To Cart"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="?actionBarSize"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:visibility="gone">

            <include layout="@layout/cart_fragment_shimmer_layout" />

        </com.facebook.shimmer.ShimmerFrameLayout>


        <include
            android:id="@+id/noLogIn"
            layout="@layout/common_no_login"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>