<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment.OrderFragment"
        android:background="@color/backgroundGrey">

        <include
            android:id="@+id/toolbar"
            layout="@layout/common_toolbar" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOrderList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1"
            android:visibility="gone"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:listitem="@layout/order_list_layout_item" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerMenu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/order_page_shimmer" />

                <include layout="@layout/order_page_shimmer" />

                <include layout="@layout/order_page_shimmer" />

                <include layout="@layout/order_page_shimmer" />

                <include layout="@layout/order_page_shimmer" />


            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivNoOrder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:scaleX="2"
            android:scaleY="2"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.4"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/order_bag" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNoOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cera_pro_bold"
            android:text="No orders yet! Browse our menu and place an order."
            android:layout_marginTop="@dimen/_10sdp"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15ssp"
            android:visibility="gone"
            android:lineSpacingExtra="@dimen/_3sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivNoOrder"
             />


        <include
            android:id="@+id/noLogIn"
            layout="@layout/common_no_login"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>