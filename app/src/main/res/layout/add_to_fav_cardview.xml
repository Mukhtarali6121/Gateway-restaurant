<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_40sdp"
    app:cardCornerRadius="@dimen/_10sdp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recycler_box"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"

        >

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCardView"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_centerVertical="true"
            app:cardCornerRadius="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMenuImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageCardView"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageCardView"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMenuTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:ellipsize="end"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/cera_pro_medium"
                    android:maxLines="1"
                    android:text="MENU TITLE"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />




                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivAddToFav1"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/add_to_favourite"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:fontFamily="@font/cera_pro_medium"

                android:textSize="@dimen/_14sdp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:layout_toRightOf="@+id/imageCardView"
                android:orientation="horizontal"

                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivVegLogo"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/veg_logo" />
<!--
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddToCart"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"
                    android:fontFamily="@font/cera_pro_medium"

                    android:text="@string/add_to_favourite"
                    android:textColor="@color/black" />-->

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>