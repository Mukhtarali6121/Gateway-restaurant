<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.AddressActivity">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Activity.AddressActivity">

            <include
                android:id="@+id/toolbar"
                layout="@layout/common_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:padding="@dimen/_16sdp">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHouseFloor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cera_pro_medium"
                        android:text="Flat No. &amp; Building Name*"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/clHouseFloor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:backgroundTint="@color/colorMainLight2"
                        android:paddingTop="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        app:layout_constraintStart_toStartOf="@+id/tvHouseFloor"
                        app:layout_constraintTop_toBottomOf="@+id/tvHouseFloor">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etHouseFloor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:ellipsize="end"
                            android:inputType="textCapWords"

                            android:background="@color/colorMainLight2"
                            android:fontFamily="@font/cera_pro_medium"
                            android:maxLines="1"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_14ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.cardview.widget.CardView>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBuildingNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/cera_pro_medium"
                        android:text="Locality / Area / Street*"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clHouseFloor" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/clBuildingNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:backgroundTint="@color/colorMainLight2"
                        android:paddingTop="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        app:layout_constraintStart_toStartOf="@+id/tvBuildingNo"
                        app:layout_constraintTop_toBottomOf="@+id/tvBuildingNo">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etLocality"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:ellipsize="end"
                            android:inputType="textCapWords"
                            android:background="@color/colorMainLight2"
                            android:fontFamily="@font/cera_pro_medium"
                            android:maxLines="1"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_14ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLandmark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/cera_pro_medium"
                        android:text="Landmark (Optional)"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clBuildingNo" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/clLandmark"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:backgroundTint="@color/colorMainLight2"
                        android:paddingTop="@dimen/_5sdp"
                        app:layout_constraintVertical_bias="0"
                        android:paddingBottom="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tvLandmark"
                        app:layout_constraintTop_toBottomOf="@+id/tvLandmark">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etLandmark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:inputType="textCapWords"
                            android:background="@color/colorMainLight2"
                            android:ellipsize="end"
                            android:fontFamily="@font/cera_pro_medium"
                            android:maxLines="1"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_14ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAddressLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/cera_pro_medium"
                        android:text="Add Address Label"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clLandmark" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAddressLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_9sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvAddressLabel" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/cera_pro_medium"
                        android:text="Enter your own label*"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rvAddressLabel" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/clOthers"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:backgroundTint="@color/colorMainLight2"
                        android:paddingTop="@dimen/_5sdp"
                        app:layout_constraintVertical_bias="0"
                        android:paddingBottom="@dimen/_5sdp"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tvLandmark"
                        app:layout_constraintTop_toBottomOf="@+id/tvLabel">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etothers"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:inputType="textCapWords"
                            android:background="@color/colorMainLight2"
                            android:ellipsize="end"
                            android:fontFamily="@font/cera_pro_medium"
                            android:maxLines="1"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_14ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/rounded_button_accent"
                android:clickable="true"
                android:visibility="visible"
                android:focusable="true"
                app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
                android:fontFamily="@font/cera_pro_bold"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:text="Save &amp; Continue"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>