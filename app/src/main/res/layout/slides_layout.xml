<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_16sdp"
   >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/slider_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/_280sdp"
        android:padding="70dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/onboard1"
        app:layout_constraintVertical_bias="0"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/slider_headings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textColor="#f000"
        android:textSize="@dimen/_30ssp"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintStart_toStartOf="@+id/slider_image"
        app:layout_constraintTop_toBottomOf="@+id/slider_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/slider_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:text="textdown"
        app:layout_constraintWidth_percent="0.5"
        android:textColor="#f000"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/slider_headings"
        app:layout_constraintTop_toBottomOf="@+id/slider_headings"
        app:layout_constraintVertical_bias="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>